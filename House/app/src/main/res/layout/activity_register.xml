<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.house.activity.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:id="@+id/ll_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:layout_marginTop="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="80dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:layout_marginTop="14dp"
            />

    </LinearLayout>

</LinearLayout>
