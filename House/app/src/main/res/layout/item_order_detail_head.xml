<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/order_bg"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/shop_white"
            android:textSize="18sp"
            android:layout_marginLeft="44dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2"
        >

        <TextView
            android:id="@+id/express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#2c2c2c"
            android:textSize="@dimen/text_big_x"
            />

        <TextView
            android:id="@+id/express_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#2c2c2c"
            android:textSize="@dimen/text_big_x"
            android:layout_marginTop="@dimen/margin_10dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:text=""
                />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:text=""
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:text="地    址："
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:lineSpacingMultiplier="1.2"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2"
        >

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="@dimen/text_big_x"
            android:text=""
            />

        <TextView
            android:id="@+id/addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="@dimen/text_big_x"
            android:text=""
            android:layout_marginTop="@dimen/margin_10dp"
            />

        <View
            android:id="@+id/pay_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginTop="@dimen/margin_10dp"
            />

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2c2c2c"
            android:textSize="@dimen/text_big_x"
            android:text=""
            android:layout_marginTop="@dimen/margin_2"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品总额"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品数量"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                />

            <TextView
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+运费"
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                />

            <TextView
                android:id="@+id/express_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin_1"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计： "
                android:textColor="#2c2c2c"
                android:textSize="@dimen/text_big_x"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/shop_red"
                android:textSize="@dimen/text_big_x"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>