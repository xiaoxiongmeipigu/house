<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_big"
            android:text="网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款网红款"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/shop_red"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="480"
                    android:textSize="@dimen/text_big_xx"
                    android:textColor="@color/shop_red"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价：680"
                android:textSize="@dimen/text_small"
                android:textColor="@color/light_gray"
                android:layout_toRightOf="@+id/ll_price"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shop_black"
                android:textSize="@dimen/text_small"
                android:layout_toRightOf="@+id/market_price"
                android:layout_marginLeft="@dimen/margin_3"
                android:text="1件起批"
                android:layout_marginTop="4dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="已成交1223笔"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:gravity="left|center_vertical"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="运费 ¥5"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="发货地：浙江杭州"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_small"
                android:gravity="right|center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selSizeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_stroke_gray"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_2"
            android:padding="@dimen/margin_2"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格选择"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/light_gray"
                android:drawableTop="@mipmap/size_icon"
                android:drawablePadding="7dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="请选择规格"
                android:textColor="@color/shop_black"
                android:textSize="@dimen/text_normal"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/background_gray"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品属性"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/shop_black"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="货源类别"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货源类别"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="货号        "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货源类别"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            >

            <TextView
                style="@style/textViewStyle"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="产地        "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货源类别"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>