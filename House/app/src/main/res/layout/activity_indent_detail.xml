<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.house.activity.indent.IndentDetailActivity">

    <include
        layout="@layout/lay_header"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        android:layout_above="@+id/bottom_layout"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:layout_alignParentBottom="true"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="加入进货单"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_white"
            android:background="@color/shop_orange"
            android:gravity="center"
            android:ellipsize="end"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="立即订购"
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_white"
            android:background="@drawable/selector_pressed_color_red_round_0"
            android:gravity="center"
            android:ellipsize="end"
            />

    </LinearLayout>

</RelativeLayout>
