<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.house.activity.CompanyRegisterActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/lay_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/vender_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入公司名称"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓        名"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入姓名"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地        址"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入地址"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手  机  号"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:inputType="phone|number"
                    android:maxLength="11"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验  证  码"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <EditText
                    android:id="@+id/mark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:inputType="number"
                    />

                <TextView
                    android:id="@+id/request_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/shop_white"
                    android:background="@drawable/selector_pressed_round_15_color_orange"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照"
                    android:textColor="@color/shop_black"
                    android:textSize="@dimen/text_big"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="15dp"
                    android:background="@color/shop_black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:id="@+id/licence_ll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/image_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:hint="请上传营业执照"
                            android:textColorHint="@color/light_gray"
                            android:textSize="@dimen/text_big"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_vertical"
                            fresco:fadeDuration="2000"
                            fresco:placeholderImage="@mipmap/img_small_default"
                            fresco:placeholderImageScaleType="fitCenter"
                            fresco:progressBarAutoRotateInterval="2000"
                            fresco:progressBarImage="@drawable/progress"
                            fresco:progressBarImageScaleType="centerInside"
                            fresco:actualImageScaleType="fitCenter"
                            fresco:roundedCornerRadius="10dp"
                            fresco:roundTopLeft="true"
                            fresco:roundTopRight="true"
                            fresco:roundBottomLeft="true"
                            fresco:roundBottomRight="true"
                            android:visibility="gone"
                            android:layout_marginTop="18dp"
                            android:layout_centerVertical="true"
                            />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/right"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/margin_10dp"
                        />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                />



            <TextView
                android:id="@+id/apply"
                android:layout_width="279dp"
                android:layout_height="45dp"
                android:text="申请"
                android:textColor="@color/shop_white"
                android:textSize="@dimen/text_big_x"
                android:gravity="center"
                android:background="@drawable/selector_pressed_color_orange"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/reset"
                android:layout_width="279dp"
                android:layout_height="45dp"
                android:text="重置"
                android:textColor="@color/shop_white"
                android:textSize="@dimen/text_big_x"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector_pressed_color_black"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
