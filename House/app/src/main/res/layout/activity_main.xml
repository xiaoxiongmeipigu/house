<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/background_gray"
        android:paddingTop="6dp"
        >

        <RadioButton
            android:id="@+id/radio_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_cb_image_home"
            android:gravity="center"
            android:text="首页"
            android:textSize="@dimen/text_small_x"
            android:textColor="@drawable/selector_home_cb_text" />
        <RadioButton
            android:id="@+id/radio_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_cb_image_order"
            android:gravity="center"
            android:text="进货单"
            android:textSize="@dimen/text_small_x"
            android:textColor="@drawable/selector_home_cb_text" />
        <RadioButton
            android:id="@+id/radio_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_cb_image_person"
            android:gravity="center"
            android:text="个人"
            android:textSize="@dimen/text_small_x"
            android:textColor="@drawable/selector_home_cb_text" />

    </RadioGroup>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_above="@+id/bottom_layout"
        />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_view"
        android:layout_below="@+id/lay_header">

    </FrameLayout>

</RelativeLayout>
