<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shop_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        >

        <TextView
            android:id="@+id/goods_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_small"
            android:textColor="@color/light_gray"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计：¥ "
            android:textSize="@dimen/text_small"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_normal"
            android:textColor="@color/shop_black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/express_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(包含运费 ¥ 0)"
            android:textSize="@dimen/text_small"
            android:textColor="@color/light_gray"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        >

        <TextView
            android:id="@+id/delete"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="删除订单"
            android:textColor="@color/shop_white"
            android:textSize="@dimen/text_small"
            android:background="@drawable/selector_pressed_color_black"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/pay"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="付款"
            android:textColor="@color/shop_white"
            android:textSize="@dimen/text_small"
            android:background="@drawable/selector_pressed_color_orange"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>