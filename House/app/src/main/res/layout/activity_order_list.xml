<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.house.activity.order.OrderListActivity">

    <include
        layout="@layout/lay_header"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_45dp"
        app:tabIndicatorColor="@color/shop_orange"
        app:tabSelectedTextColor="@color/shop_orange"
        app:tabTextColor="@color/shop_black"
        app:tabIndicatorHeight="2dp"
        app:tabTextAppearance="@style/TabLayoutTextAppearance_size_big"
        android:background="@color/shop_white"
        android:layout_below="@+id/lay_header"
        >
    </android.support.design.widget.TabLayout>
    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/tablayout"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_view"
        >
    </android.support.v4.view.ViewPager>

</RelativeLayout>
